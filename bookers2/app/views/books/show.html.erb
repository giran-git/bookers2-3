<main>
  <%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
				<td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%>
          <br><%= link_to @user.name, user_path(@user) %>
          </td>


					<td><%= link_to @book.title, @book %></td>
					<td><%= @book.body %></td>

					<!-- ファボリツ機能　-->
					<td>
						<% if @book.favorited_by?(current_user) %>
						<%= link_to book_favorites_path(@book), method: :delete do %>
					　♥️<%= @book.favorites.count %>
						<% end %>
						<% else %>
						<%= link_to book_favorites_path(@book), method: :post do %>

						♡<%= @book.favorites.count %>
						<% end %>
						<% end %>
					</td>
					<!-- コメント表示機能　-->
					<td>
						<p>コメント数：<%= @book.book_comments.count %></p>
					</td>

					<% if @user.id == current_user.id %>
					<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td>
						<%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
					</td>
					<% end %>
				</tr>
			</table>

			<!-- 投稿したコメントと書く場所表示 -->

			<table class="table">
					<% @book.book_comments.each do |book_comment|%>
				<tr>
					<td>
						<%= link_to attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg"), user_path(book_comment.user) %> <br>
						<%= book_comment.user.name %>
					</td>
					<td>
						<%= book_comment.comment %>
					</td>

					<td>
						<% if book_comment.user_id == current_user.id %>
						<%= link_to "Delete", book_book_comment_path(@book,book_comment.id), method: :delete, class: "btn-sm btn-danger" %>

						<% end %>
					</td>

				</tr>
					<% end %>
			</table>

			<div class="post-comment">
				<%= form_for [@book, @book_comment] do |f| %>
				<%= f.text_area :comment, size: "50x5" %><br>
				<%= f.submit "送信する" %>
				<% end %>
			</div>

		</div>
	</div>
</div>
</main